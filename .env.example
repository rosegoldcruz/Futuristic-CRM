# AEON Environment Configuration Example
# Copy this file to .env and fill in your values

# ========================================
# DATABASE
# ========================================
DATABASE_URL=postgresql://user:password@host:5432/database
POSTGRES_USER=aeon
POSTGRES_PASSWORD=changeme
POSTGRES_DB=aeon_production

# ========================================
# BACKEND API
# ========================================
API_HOST=0.0.0.0
API_PORT=8000
ENVIRONMENT=production
DEBUG=false

# CORS
CORS_ORIGINS=https://aeon.example.com

# ========================================
# FRONTEND
# ========================================
NEXT_PUBLIC_API_BASE=https://api.aeon.example.com

# ========================================
# SECURITY
# ========================================
SECRET_KEY=your-secret-key-here-change-in-production
JWT_SECRET=your-jwt-secret-here-change-in-production
SESSION_SECRET=your-session-secret-here-change-in-production

# ========================================
# INTEGRATIONS
# ========================================

# Supabase
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Stripe
STRIPE_API_KEY=sk_live_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Twilio
TWILIO_ACCOUNT_SID=AC...
TWILIO_AUTH_TOKEN=...
TWILIO_PHONE_NUMBER=+1234567890

# SendGrid
SENDGRID_API_KEY=SG...
SENDGRID_FROM_EMAIL=noreply@aeon.example.com

# OpenAI
OPENAI_API_KEY=sk-...

# ========================================
# AWS (Optional)
# ========================================
AWS_ACCESS_KEY_ID=AKIA...
AWS_SECRET_ACCESS_KEY=...
AWS_REGION=us-east-1
AWS_S3_BUCKET=aeon-production-files

# ========================================
# REDIS (Optional)
# ========================================
REDIS_URL=redis://localhost:6379

# ========================================
# MONITORING
# ========================================
SENTRY_DSN=https://...@sentry.io/...
LOG_LEVEL=INFO
